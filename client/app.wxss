@import "./pages/weui.wxss";
page { background: #F6F6F6; }

.qrcode-area {
  display: flex;
  margin-top: 30rpx;
  align-items: center;
  align-content: flex-start;
  justify-content: center;
  flex-flow: column;
  }
.qrcode { width: 400rpx; height: 400rpx; }

.x5ui-column { display: flex; flex-flow: row wrap; }
.x5ui-mini { text-align: center; margin-top: 0.5em; }
.x5ui-mini button { margin-top: 0px; margin-right: 20rpx; }
.x5ui-mini button:last-child { margin-right: 0px; }
.x5ui-bottom { margin-bottom: 1em; }

.x5ui-panel { display: flex; flex-flow: row; border-bottom: solid 1px #D9D9D9; font-size: 13px; color:#999; margin: 10px 10px 5px 10px; padding-bottom: 5px; }
.x5ui-panel_ico { width: 5px; background-color: rgb(87, 56, 221); }
.x5ui-panel_title { text-indent: 5px; }

.x5ui-btn_half { width: 40%; }
.x5ui-pick_noborder { border-right: none; }

/*增加的删除图标*/
.remove-icon { height: 1.2em; width: 1.2em; border: none; vertical-align: middle; }
.students_images { width: 46rpx; height: 46rpx; border: none; vertical-align: middle; margin-right: 15rpx; }

/* weui */
.weui-input { text-align: left; }
.weui-select { text-align: left; }
.weui-cell_vcode .weui-input { padding-right: 20rpx; }
