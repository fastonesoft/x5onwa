/**login.wxss**/
page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  height: 470rpx;
  background-color: #FFF;
  border-bottom: 1px solid rgba(0, 0, 0, .15);
}

.userinfor-bg {
  width: 100%;
  position: absolute;
}

.userinfo {
  top: 30rpx;
  position: fixed;

  width: 100%;

  border: none;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
}

.userinfo-avatar {
  width: 280rpx;
  height: 280rpx;
  border: 15rpx solid #FFF;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.userinfo-nickname {
  font-size: 40rpx;
  color: #E6A800;
}

.userinfo-button {
  width: 260rpx;
}
