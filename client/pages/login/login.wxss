/**login.wxss**/

page {
  background-color: #fff;
}

.container {
  height: 220px;
  position: relative;
}

.userinfor-bg {
  width: 100%;
  height: 100%;
}

.userinfo {
  position: absolute;
  top: 80px;
  width: 100%;
  border: none;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 4.5em;
  height: 4.5em;
  border: 0.3em solid #fff;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.userinfo-nickname {
  font-size: 17px;
  color: #e6a800;
}
