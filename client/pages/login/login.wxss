/**login.wxss**/

page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  height: 400rpx;
  position: relative;
  background-color: #fff;
}

.userinfor-bg {
  width: 100%;
  height: 100%;
}

.userinfo {
  position: absolute;
  top: 90rpx;
  width: 100%;
  border: none;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 220rpx;
  height: 220rpx;
  border: 12rpx solid #fff;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.userinfo-nickname {
  font-size: 40rpx;
  color: #e6a800;
}
