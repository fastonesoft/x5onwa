/**login.wxss**/
page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  margin-bottom: 40rpx;
  height: 360rpx;
  width: 100%;
  background: #FFF;
  border: 1px solid rgba(0, 0, 0, .1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx 0 20rpx 0;
  border-radius: 50%;
}

.userinfo-nickname {
  width: 200rpx;
  font-size: 32rpx;
  color: #007AFF;
  padding: 0rpx;
  background-color: white;
}

.login-can_scan {
  width: 300rpx;
}