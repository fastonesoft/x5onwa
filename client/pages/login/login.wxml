<!-- login.wxml -->
<view class="weui-toptips weui-toptips_warn" wx:if="{{errorShow}}">{{errorMessage}}</view>

<view class="container">
  <image class="userinfor-bg" src="./loginbg.png" mode="aspectFill"></image>
  <view class="userinfo">
    <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
    <open-data class="userinfo-nickname" type="userNickName"></open-data>
  </view>
</view>

<view class="weui-btn-area" wx:if="{{notauth}}">
  <button class="x5ui-btn_half" type="warn" open-type="getUserInfo" bindgetuserinfo="bindAuth">授权登录</button>
</view>

<formForm title="用户注册" notitle="{{1}}" fields="{{fields}}" rules="{{rules}}" bind:formSubmit="regSubmit" wx:if="{{notreg}}" />

<comList title="用户信息" notitle="{{true}}" obj="{{user}}" mes="{{mes}}" wx:if="{{reged}}"/>

<block wx:if="{{userschs.length>0}}">
  <view class="weui-cells__title">注册学校</view>
  <view class="weui-cells weui-cells_after-title">
    <radio-group name="uid" bindchange="userschsChange">
      <label class="weui-cell weui-check__label" wx:for="{{userschs}}" wx:key="uid">
        <radio class="weui-check" value="{{item.uid}}" checked="{{item.is_current}}" />
        <view class="weui-cell__bd">{{item.schs_sch}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-radio">
          <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.is_current}}"></icon>
          <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.is_current}}"></icon>
        </view>
      </label>
    </radio-group>
  </view>
</block>

<view class="weui-cells__tips x5ui-color_red" wx:if="{{user.fixed}}">
  帐号已冻结，具体原因，请联系管理员！
</view>