<!--login.wxml-->
<view class="container">
  <!-- 用户登录测试 -->
  <image class="userinfor-bg" src="./loginbg.png"></image>
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{logged ? userinfor.avatarUrl : './unlogin.png'}}"></image>
    <view>
      <button type="warn" class="userinfo-button" wx:if="{{!logged}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
      <text class="userinfo-nickname" wx:else>{{userinfor.nickName}}</text>
    </view>
  </view>
</view>
<view class="weui-cells__title">个人信息</view>
<view class="weui-cells weui-cells_after-title">
<navigator url="/pages/index/userset" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">完善个人信息</view>
    <view class="weui-cell__ft">
      <icon type="success_no_circle" size="20"></icon></view>
  </navigator>
</view>
<view class="weui-cells__title">我的孩子</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">添加孩子资料</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">
      <icon type="success_no_circle" size="20"></icon></view>
  </view>
</view>