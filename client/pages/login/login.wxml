<!-- login.wxml -->
<view class="weui-toptips weui-toptips_warn" wx:if="{{errorShow}}">{{errorMessage}}</view>

<view class="container">
  <image class="userinfor-bg" src="./loginbg.png" mode="aspectFill"></image>
  <view class="userinfo">
    <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
    <open-data class="userinfo-nickname" type="userNickName"></open-data>
  </view>
</view>
<block wx:if="{{notauth}}">
  <view class="weui-btn-area">
    <button class="x5ui-btn_half" type="warn" open-type="getUserInfo" bindgetuserinfo="bindAuth">授权登录</button>
  </view>
</block>

<form bindsubmit="regSubmit" wx:if="{{notreg}}">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">用户姓名</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="输入您的姓名" name="name" type="text" maxlength="4" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">手机号码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="输入您的手机号码" name="mobil" type="number" maxlength="11" />
      </view>
    </view>
  </view>
  <view class="weui-btn-area">
    <button type="primary" form-type="submit">提交</button>
  </view>
</form>

<block wx:if="{{reged}}">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">用户姓名</view>
      <view class="weui-cell__ft">{{user.name}}</view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__bd">手机号码</view>
      <view class="weui-cell__ft">{{user.mobil}}</view>
    </view>
  </view>
</block>

<block wx:if="{{userschs.length>0}}">
  <view class="weui-cells__title">注册学校</view>
  <view class="weui-cells weui-cells_after-title">
    <radio-group name="uid" bindchange="userschsChange">
      <label class="weui-cell weui-check__label" wx:for="{{userschs}}" wx:key="uid">
        <radio class="weui-check" value="{{item.uid}}" checked="{{item.checked}}" />
        <view class="weui-cell__bd">{{item.schs_sch}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-radio">
          <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
          <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
        </view>
      </label>
    </radio-group>
  </view>
</block>

<block wx:if="{{user.fixed}}">
  <view class="weui-cells__tips x5ui-color_red">
    帐号已冻结，具体原因，请联系管理员！
  </view>
</block>