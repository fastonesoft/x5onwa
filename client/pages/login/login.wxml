<!--login.wxml-->
<view class="container">
  <image class="userinfor-bg" src="./loginbg.png" mode="aspectFill"></image>
  <view class="userinfo">
    <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
    <open-data class="userinfo-nickname" type="userNickName"></open-data>
  </view>
</view>
<block wx:if="{{notauth}}">
  <view class="weui-btn-area x5ui-half-btn">
    <button type="warn" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
  </view>
</block>
<block wx:if="{{logged}}">
  <view class="weui-btn-area x5ui-half-btn">
    <button type="primary" bindtap="inforClick">完善信息</button>
  </view>
</block>

<block wx:if="{{inforchecked}}">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">用户姓名</view>
      <view class="weui-cell__ft">{{item.value}}</view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__bd">手机号码</view>
      <view class="weui-cell__ft">{{item.value}}</view>
    </view>
  </view>
</block>