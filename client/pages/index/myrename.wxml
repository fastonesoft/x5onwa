<!--pages/index/myrename.wxml-->
<view class="weui-toptips weui-toptips_warn" wx:if="{{errorShow}}">{{errorMessage}}</view>

<comPick title="年级设置" notitle="{{1}}" label="年级选择" name="grade_id" rangeKey="steps_grade" selectKey="steps_grade"
  valueKey="id" picks="{{grades}}" bind:pickChange="gradeChange" />



<form bindsubmit="myrenameSubmit" wx:if="{{items.length>0}}">
  <view class="weui-cells__title">班级列表</view>
  <view class="weui-cells weui-cells_after-title">
    <block wx:for="{{items}}" wx:key="id">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">{{item.cls_order}}</view>
          </view>
          <view class="weui-cell__bd">
        <input class="weui-input" placeholder="输入班级号码" name="{{item.uid}}" type="number" maxlength="2" data-uid="{{item.uid}}" value="{{item.value}}" bindblur="checkInput"/>
          </view>
          <view class="weui-cell__ft" wx:if="{{item.error}}">
            <icon type="warn" size="23" color="#E64340"></icon>
          </view>
        </view>
    </block>
  </view>

  <view class="x5ui-half-btn">
    <view class="weui-btn-area">
      <button type="primary" form-type="submit">提交变更</button>
    </view>
  </view>
</form>