/**index.wxss**/

page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container{
  background: #FFF;
  border: 1px solid rgba(0, 0, 0, .1);
  border-left: none;
  border-right: none;
  padding-bottom: 0;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: bottom center;
  font-size: 16px;
}

.swiper-img{
  border: none;
  width: 100%;
}

.cores{
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  align-content: center;
}
.core-item{
  width: 25%;
  height: 5.5em;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  align-content: flex-start;
  justify-content: center;

}
.core-item.disabled{
  color: #9c9c9c;
}
.core-item image{
  width: 2.2em;
  height: 2.2em;
  margin-bottom: 5px;
}
