/**index.wxss**/
@import "../../weui.wxss";
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.container{
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    padding-bottom: 0;
    background-repeat: no-repeat;
    background-size: 100% auto;
    background-position: bottom center;
}
.index-swiper{
  height: 360rpx;
}
.index-swiper-img{
  border: none;
  width: 100%;
}

.index-scroll{
    width: 100%;
    display: flex;
    flex-flow: row wrap;
}
.index-scroll .cores{
    width: 25%;
}
.index-scroll .core-item{
    display: flex;
    flex-flow: column wrap;
    height: 160rpx;
    align-items: center;
    align-content: center;
    justify-content: center;
    font-size: 30rpx;
}
.index-scroll .core-item.disabled{
    color: #9c9c9c;
}
.index-scroll .core-item image{
    width: 85rpx;
    height: 85rpx;
    margin: 15rpx 0 15rpx 0;
}
