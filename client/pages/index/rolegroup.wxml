<!--pages/index/rolegroup.wxml-->
<view class="weui-toptips weui-toptips_warn" wx:if="{{errorShow}}">{{errorMessage}}</view>

<form bindsubmit="rolegroupSubmit">
  <view class="weui-cells__title">分组设置</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_select">
      <view class="weui-cell__hd weui-cell__hd_in-select-after">
        <view class="weui-label">分组选择</view>
      </view>
      <view class="weui-cell__bd">
        <picker bindchange="rolegroupChange" name="group" value="{{groupIndex}}" range="{{rolegroups}}"
          range-key="name" disabled="{{rolegroups.length==0}}">
          <view class="weui-select weui-select_in-select-after">{{rolegroups[groupIndex].name}}</view>
        </picker>
      </view>
    </view>
  </view>

  <block wx:if="{{roles.length>0}}">
    <view class="weui-cells__title">权限设置</view>
    <view class="weui-cells weui-cells_after-title">
      <block wx:for="{{roles}}" wx:key="uid">
        <view class="weui-cell weui-cell_switch">
          <view class="weui-cell__bd">{{item.title}}</view>
          <view class="weui-cell__ft">
            <switch name="{{item.uid}}" checked="{{item.has_role}}" />
          </view>
        </view>
      </block>
    </view>
    <view class="weui-btn-area x5ui-bottom">
      <button type="primary" form-type="submit">提交</button>
    </view>
  </block>
</form>